.order-item {
    width: 700rpx;
    padding: 0 20rpx;
    position: relative;
    border-radius: 5px;
    background: #ffffff;
}

.order-item:nth-of-type(n+2) {
    margin-top: 30rpx;
}

.order-item-top {
    width: 100%;
    height: 100rpx;
}

.font-icon {
    min-width: 45rpx;
    height: 45rpx;
    color: #1c89d6;
    font-size: 26rpx;
    border-radius: 50%;
    border: 1px solid #1c89d6;
    margin-right: 20rpx;
}

.font-icon-shou {
    min-width: 45rpx;
    height: 45rpx;
    color: #d61c4c;
    font-size: 26rpx;
    border-radius: 50%;
    border: 1px solid #d61c4c;
    margin-right: 20rpx;
}

.order-item-top-left {
    margin-left: 100rpx;
    color: #000000;
    font-weight: bold;
}

.address-item {
    width: 100%;
    height: 80rpx;
}

.address-item-msg {
    color: #999999;
    font-size: 24rpx;
}

.address-img {
    width: 25rpx;
    height: 25rpx;
    margin-right: 20rpx;
    margin-top: 8rpx;
}

.order-item-bottom {
    height: 100rpx;
    color: #999999;
    border-top: 1px solid #cccccc;
}

.status-img {
    width: 94rpx;
    height: 94rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.status-font {
    color: #00baf5;
}

.betweens {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.row {
    display: flex;
    flex-direction: row;
}

.no-rows {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 600rpx;
}

.center {
    display: flex;
    justify-content: center;
    align-items: center;
}