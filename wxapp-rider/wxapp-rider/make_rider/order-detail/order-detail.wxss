.top-box {
    width: 100%;
    height: 250rpx;
    color: #ffffff;
    font-size: 26rpx;
    background: #1c89d6;
    padding: 0 40rpx;
}

.order-status-png {
    width: 45rpx;
    height: 45rpx;
    margin-right: 30rpx;
}

.top-first {
    margin: 50rpx 0 20rpx 0;
}

.order-status {
    font-size: 36rpx;
}

.order-car {
    width: 156rpx;
    height: 107rpx;
    margin-top: 30rpx;
}

.money-box {
    margin-left: 30rpx;
}

.money {
    font-size: 40rpx;
    font-weight: bold;
}

.main {
    width: 710rpx;
    background: #eeeeee;
    border-radius: 5px 5px 0 0;
    position: absolute;
    top: 200rpx;
    left: 20rpx;
}

.item-box {
    width: 100%;
    background: #ffffff;
    padding: 0 20rpx;
    border-radius: 5px;
    margin-bottom: 20rpx;
}

.address-box {
    padding-top: 30rpx;
}

.font-icon {
    min-width: 45rpx;
    height: 45rpx;
    color: #1c89d6;
    font-size: 26rpx;
    border-radius: 50%;
    border: 1px solid #1c89d6;
    margin-right: 20rpx;
}

.font-icon-shou {
    min-width: 45rpx;
    height: 45rpx;
    color: #d61c4c;
    font-size: 26rpx;
    border-radius: 50%;
    border: 1px solid #d61c4c;
    margin-right: 20rpx;
}

.address-title {
    margin-right: 20rpx;
}

.address-title-box {
    margin-bottom: 20rpx;
}

.address-phone {
    font-size: 24rpx;
    color: #808088;
}

.address-des {
    font-size: 24rpx;
    color: #808088;
}

.btn-row-box {
    padding: 30rpx 0;
}

.phone-btn {
    width: 150rpx;
    height: 50rpx;
    font-size: 30rpx;
    border-radius: 35px;
    border: 1px solid #2c282e;
}

.map-btn {
    margin-left: 50rpx;
}

.tast-box {
    width: 100%;
    height: 100rpx;
    font-size: 26rpx;
    border-top: 1px solid #eeeeee;
}

.tast-des {
    color: #1c89d6;
}

.item-title {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 30rpx;
    font-weight: bold;
    border-bottom: 1px solid #e6e6e6;
    margin-bottom: 30rpx;
}

.item-box .item {
    padding-bottom: 30rpx;
}

.item-left {
    color: #999999;
}

.item-right {
    color: #333333;
    width: 500rpx;
    text-align: right;
}

.copy-btn {
    padding: 0 15rpx;
    border: 1px solid #eaeaea;
    margin-left: 20rpx;
    border-radius: 35rpx;
}

.img-box {
    width: 100%;
}

.goods-img {
    width: 140rpx;
    height: 140rpx;
    border-radius: 5px;
    margin-right: 26rpx;
    margin-bottom: 20rpx;
}

.voice-btn {
    width: 150rpx;
    height: 50rpx;
    color: #1f7be3;
    font-size: 24rpx;
    border: 1px solid #1f7be3;
    border-radius: 5px;
    margin-left: 30rpx;
}

.voice-img {
    width: 25rpx;
    height: 31rpx;
    margin-left: 10rpx;
}

.hover-voice {
    background: rgba(9,123,241,0.2);
}

.flex-end {
    display: flex;
    justify-content: flex-end;
    align-items: center;
}