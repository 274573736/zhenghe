.big-box {
    width: 100%;
    flex-wrap: wrap;
}

.item {
    box-shadow: 0 0 10px #e0e0e0;
    margin-top: 10rpx;
    border-radius: 5px;
}

.item:nth-of-type(1) {
    margin-top: 30rpx;
}

.item:nth-of-type(2) {
    margin-top: 30rpx;
}

.item:nth-of-type(even) {
    margin-left: 10rpx;
}

.goods-img {
    width: 370rpx;
    height: 280rpx;
    border-bottom: 1px solid #f7f7f7;
}

.goods-des {
    width: 370rpx;
    height: 150rpx;
    padding: 30rpx 20rpx;
    background: #ffffff;
    font-size: 28rpx;
}

.goods-des-font {
    width: 330rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.goods-price {
    color: #ff0000;
    font-size: 30rpx;
    font-weight: bold;
    margin-top: 20rpx;
}

.no-more {
    font-size: 28rpx;
    width: 100%;
    height: 100rpx;
    color: #808080;
}

.list-box {
    width: 100%;
    height: 200rpx;
    padding: 0 40rpx;
    margin-top: 40rpx;
    background: #ffffff;
}

.list-box:nth-of-type(n+2) {
    margin-top: 20rpx;
}

.small-goods-img {
    width: 150rpx;
    height: 150rpx;
    margin-right: 30rpx;
    border: 1px solid #e0e0e0;
    box-shadow: 0 0 5px #cccccc;
}

.small-goods-name {
    font-weight: bold;
}

.small-goods-des {
    color: #808080;
    font-size: 28rpx;
}

.small-goods-property {
    margin: 20rpx 0;
}

.small-goods-btn {
    width: 180rpx;
    height: 70rpx;
    font-size: 28rpx;
    color: #808080;
    border-radius: 35px;
    border: 1px solid #eeeeee;
}

.btn-no-use {
    background: #097bf1;
    color: #ffffff;
}