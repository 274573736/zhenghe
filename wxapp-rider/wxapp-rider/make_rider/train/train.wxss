.date-bottom {
    border-bottom: 1px solid #f5f5f5;
}

.time-item {
    width: 100%;
    height: 100rpx;
}

.date-active {
    color: #00baf5;
}

.time-item:nth-of-type(n+2) {
    border-top: 1px solid #eeeeee;
}

.no-date-item {
    background: #f0f0f0;
}

.date-item:nth-of-type(n+2) {
