.mian {
    padding: 20rpx;
}

.top {
    width: 100%;
    padding: 20rpx 70rpx 60rpx 70rpx;
    background: #ffffff;
    position: relative;
}

.circle-title {
    color: #ffffff;
    font-size: 24rpx;
    width: 30rpx;
    height: 30rpx;
    text-align: center;
    line-height: 30rpx;
    border-radius: 50%;
    background: #212330;
}

.line-r {
    border-top: 1px dashed #212330;
    width: 150rpx;
    margin: 0 1px;
}

.line-active {
    border-top: 1px dashed #e4e4e4;
}

.circle-active {
    background: #e4e4e4;
}

.top-1 {
    font-size: 24rpx;
    font-weight: bold;
    position: absolute;
    top: 60rpx;
    left: 32rpx;
}

