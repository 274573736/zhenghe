}

.photo-box {
    width: 710rpx;
    height: 320rpx;
    padding: 20rpx;
    background: #ffffff;
    margin-top: 20rpx;
}

.photo-title {
    font-weight: bold;
    margin: 20rpx 0 40rpx 0;
}

.photo-img {
    width: 64rpx;
    height: 64rpx;
}

.photo {
    width: 300rpx;
    height: 180rpx;
    color: #cccccc;
    background: #ffffff;
    border: 1px dashed #cccccc;
    border-radius: 5px;
}

.photo-des {
    font-size: 26rpx;
    margin-top: 20rpx;
}

.item-box {
    width: 100%;
    padding-left: 20rpx;
    background: #ffffff;
    margin-top: 20rpx;
}

.item-left {
    font-weight: bold;
}

.item-right {
    color: #808088;
    text-align: right;
}

.item {
    padding: 30rpx 20rpx 30rpx 0;
}

.item:nth-of-type(n+2) {
    border-top: 1px solid #cccccc;
}

.form-btn {
    width: 670rpx;
    height: 80rpx;
    color: #ffffff;
    border-radius: 35px;
    background: linear-gradient(to left,#1c89d6,#36caea);
    position: fixed;
    bottom: 80rpx;
}

.car-box {
    flex-wrap: wrap;
    padding: 10rpx 0;
}

.btn-default {
    padding: 10rpx 20rpx;
    border-radius: 5px;
    border: 1px solid #eeeeee;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
}

.btn-select {
    background: #03a9f5;
    color: #ffffff;
}