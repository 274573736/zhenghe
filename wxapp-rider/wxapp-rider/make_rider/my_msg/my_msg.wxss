.item-box {
    background: #ffffff;
    width: 100%;
    padding: 0 40rpx;
}

.item {
    width: 100%;
    height: 100rpx;
}

.item-left {
    width: 20%;
}

.item-right {
    width: 50%;
}

.item-right-input {
    width: 100%;
    text-align: right;
}

.item-right-font {
    margin-right: 20rpx;
}

.item-box:nth-of-type(n+2) {
    margin-top: 20rpx;
}

.item-box .item:nth-of-type(n+2) {
    border-top: 1px solid #eeeeee;
}

.btn {
    background: #00baf5;
    width: 500rpx;
    height: 80rpx;
    color: #ffffff;
    border-radius: 5px;
    margin-top: 100rpx;
}