.login-box {
    width: 100%;
    padding: 0 40rpx;
    position: fixed;
    bottom: 80rpx;
    left: 0;
    right: 0;
}

.login-btn {
    width: 100%;
    height: 80rpx;
    color: #ffffff;
    font-size: 32rpx;
    background: linear-gradient(to left,#1c89d6,#36caea);
    border-radius: 35px;
}

.btn-hover {
    background: #a1dafb;
}