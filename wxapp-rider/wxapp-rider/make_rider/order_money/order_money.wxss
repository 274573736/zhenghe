page {
    background: #ffffff;
}

.box-space {
    width: 100%;
    height: 20rpx;
}

.order-item {
    width: 750rpx;
    padding: 0 20rpx;
    position: relative;
    border-radius: 5px;
    background: #ffffff;
}

.order-item-top {
    width: 100%;
    height: 100rpx;
}

.order-item-top-left {
    color: #000000;
    font-weight: bold;
}

.address-item {
    width: 100%;
    height: 80rpx;
}

.address-item-msg {
    color: #999999;
    font-size: 24rpx;
}

.address-img {
    width: 25rpx;
    height: 25rpx;
    margin-right: 20rpx;
    margin-top: 8rpx;
}

.order-item-bottom {
    height: 100rpx;
    color: #999999;
    border-top: 1px solid #cccccc;
}

.status-img {
    width: 94rpx;
    height: 94rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.status-font {
    color: #00baf5;
}

.payed-box {
    padding: 20rpx 0;
    text-align: center;
}

.payed-money {
    font-size: 60rpx;
    font-weight: bold;
}

.extral-box {
    width: 100%;
    text-align: center;
}

.extral-input {
    text-align: left;
    height: 70rpx;
    padding-left: 10rpx;
    margin-right: 20rpx;
    border: 1px solid #eeeeee;
    border-radius: 5px;
}

.extral-des {
    font-size: 26rpx;
    margin-top: 20rpx;
}

.login-box {
    width: 100%;
    padding: 0 40rpx;
    position: fixed;
    bottom: 80rpx;
    left: 0;
    right: 0;
}

.login-btn {
    width: 100%;
    height: 80rpx;
    color: #ffffff;
    font-size: 32rpx;
    background: linear-gradient(to left,#1c89d6,#36caea);
    border-radius: 35px;
}

.btn-hover {
    background: #a1dafb;
}

.upload-imgs-box {
    padding-left: 100rpx;
    margin-top: 100rpx;
}