.top {
    padding: 0 40rpx;
    background: #ffffff;
}

.top-item {
    width: 200rpx;
    height: 100rpx;
}

.top-item-active {
    color: #00baf5;
}

.top-bottom-line {
    width: 100%;
}

.top-bottom-line view {
    width: 200rpx;
    height: 2px;
}

.top-bottom-line-active {
    background: #00baf5;
}

.icon-img {
    width: 71rpx;
    height: 70rpx;
    margin-left: 40rpx;
    margin-right: 30rpx;
}

.item {
    width: 100%;
    height: 100rpx;
    background: #ffffff;
}

.item:nth-of-type(n+2) {
    border-top: 1px solid #eeeeee;
}

.content-box {
    margin-top: 20rpx;
}

.content {
    margin-top: 20rpx;
    padding: 0 40rpx;
}

.content-item {
    border-radius: 5px;
    background: #ffffff;
    padding: 10rpx 40rpx 30rpx 20rpx;
}

.content-item:nth-of-type(n+2) {
    margin-top: 20rpx;
}

.font1 {
    margin-bottom: 10rpx;
}

.font2 {
    margin-top: 5rpx;
    color: #999999;
    font-size: 24rpx;
}