.bg_img {
    width: 100%;
    height: 400rpx;
}

.box {
    width: 100%;
    padding: 0 40rpx;
}

.first_box {
    width: 100%;
    padding: 30rpx 30rpx 50rpx 30rpx;
    margin: 50rpx 0 20rpx 0;
    background: #ffffff;
    border-radius: 5px;
}

.first_box_1 {
    font-size: 36rpx;
    font-weight: bold;
}

.first_box_2 {
    color: #ff0000;
    font-weight: bold;
    margin-top: 20rpx;
}

.two_box {
    width: 100%;
    background: #ffffff;
    border-radius: 5px;
    padding: 20rpx 30rpx 40rpx 30rpx;
}

.two_box_name {
    font-size: 36rpx;
    color: #000;
    font-weight: bold;
}

.two_box_name_2 {
    margin-top: 30rpx;
}

.two_box_item {
    color: #808080;
    margin-top: 20rpx;
}

.btn {
    width: 670rpx;
    height: 80rpx;
    color: #ffffff;
    border-radius: 35px;
    position: fixed;
    bottom: 60rpx;
}

.btn_click {
    background: #097bf1;
}

.btn_forbid {
    background: #aeaeae;
}