.top {
    font-size: 28rpx;
    color: #ffffff;
    width: 700rpx;
    height: 400rpx;
    background: #45a0fd;
    border-radius: 5px;
    padding: 40rpx 40rpx 20rpx 40rpx;
}

.top-money {
    font-size: 70rpx;
}

.top-bottom {
    margin-top: 40rpx;
}

.btn {
    background: #96c5f6;
    width: 200rpx;
    height: 60rpx;
    border-radius: 5px;
}

.btn-right {
    margin-left: 100rpx;
}

.bottom {
    padding: 0 40rpx;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 80rpx;
    color: #ffffff;
}

.bottom-btn {
    width: 100%;
    height: 80rpx;
    border-radius: 35px;
}

.bottom-btn1 {
    background: linear-gradient(to left,#1c89d6,#36caea);
}

.bottom-btn2 {
    background: linear-gradient(to left,#ed8270,#e84341);
    margin-top: 40rpx;
}

.btn-hover {
    background: #a1dafb;
}

.red-hover {
    background: #ed8270;
}