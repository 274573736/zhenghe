.top-item {
    font-size: 32rpx;
    width: 100%;
    height: 100rpx;
    background: #ffffff;
    padding: 0 40rpx;
}

.top-input {
    font-size: 30rpx;
    width: 200rpx;
    text-align: right;
}

.input-place {
    text-align: right;
}

.top-item:nth-of-type(n) {
    border-bottom: 1px solid #eeeeee;
}

.top-all-money {
    height: 100rpx;
    font-size: 28rpx;
    background: #ffffff;
    color: #03a9f5;
    margin-bottom: 20rpx;
    width: 100%;
    justify-content: flex-end;
}

.btn-default {
    padding: 10rpx 20rpx;
    border: 1px solid #eeeeee;
    border-radius: 5px;
    margin-right: 30rpx;
}

.btn-select {
    background: #03a9f5;
    color: #ffffff;
}

.body-top {
    width: 100%;
    padding-left: 40rpx;
    padding-top: 36rpx;
    background: #ffffff;
}

.body-item {
    width: 100%;
    height: 100rpx;
    padding: 0 40rpx;
    background: #ffffff;
}

.body-item:nth-of-type(n+1) {
    border-bottom: 1px solid #eeeeee;
}

.body-icon {
    width: 50rpx;
    height: 50rpx;
    margin-right: 30rpx;
}

.body-select-icon {
    width: 26rpx;
    height: 26rpx;
    padding: 30rpx;
}

.body-children-item-left {
    min-width: 220rpx;
    font-size: 32rpx;
}

.body-item input {
    flex: 1;
}

.body-des {
    font-size: 28rpx;
    color: #b9b9b9;
    margin-top: 20rpx;
    margin-right: 40rpx;
}

.body-icon-h {
    width: 39rpx;
    height: 30rpx;
    margin-right: 40rpx;
}

.btn {
    width: 670rpx;
    height: 80rpx;
    color: #ffffff;
    border-radius: 35px;
    background: linear-gradient(to right,#36c9ea,#1c8ad6);
    margin: 50rpx 0 30rpx 0;
}

.btn-hover {
    background: #a1dafb;
}