page {
    height: 100%;
    width: 100%;
    color: #212330;
    font-size: 30rpx;
    background-color: #eeeeee;
    font-family: "PingFang SC","Source Han Sans CN";
}

view {
    box-sizing: border-box;
}

.icon_img {
    height: 25rpx;
    width: 14rpx;
}

.r-end {
    display: flex;
    align-items: flex-end;
}

.center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.around {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.center-c {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.center-r {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.between {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.betweens {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.row {
    display: flex;
    flex-direction: row;
}

.font-gray {
    color: #999999;
}

.rows {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.column {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.flex-c {
    display: flex;
    flex-direction: column;
}

.columns {
    display: flex;
    flex-direction: column;
}

.jump-bg {
    width: 100%;
    height: 100%;
    background-color: #000;
    background: rgba(0,0,0,0.3);
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    z-index: 100;
}

.z-index {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background-color: #000;
    background: rgba(0,0,0,0.3);
    z-index: 10;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.icon-img {
    width: 50rpx;
    height: 50rpx;
}

.no-row {
    word-break: keep-all;
    white-space: nowrap;
}

.no-rows {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.font-hidden {
    overflow: hidden;
    text-overflow: ellipsis;
}

.right-img {
    width: 9rpx;
    height: 19rpx;
}

.w-h {
    width: 50%;
}

.w-f {
    width: 100%;
}

.h-f {
    height: 100%;
}

.full {
    height: 100%;
    width: 100%;
}

.no-order-box {
    flex-grow: 1;
    width: 100%;
}

.no-font {
    margin-top: 50rpx;
    color: #999999;
}