.box {
    width: 750rpx;
    height: 100%;
    text-align: center;
    background: rgba(0,0,0,0.3);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.index-img {
    width: 710rpx;
    height: 150rpx;
    position: absolute;
    top: 300rpx;
    right: 20rpx;
}

.plane-img {
    width: 67rpx;
    height: 238rpx;
    position: absolute;
    top: 550rpx;
    right: 200rpx;
}

.font-des {
    color: #ffffff;
    font-size: 36rpx;
    position: absolute;
    top: 800rpx;
    right: 40rpx;
}

.btn-box {
    width: 100%;
    text-align: center;
    position: absolute;
    top: 1000rpx;
}

.btn {
    width: 320rpx;
    height: 80rpx;
    font-size: 36rpx;
    line-height: 80rpx;
    text-align: center;
    color: #ffffff;
    border: 1px solid #ffffff;
    border-radius: 35px;
}

.center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.between {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.w-f {
    width: 100%;
}