.photo-box {
    width: 100%;
    padding: 0 20rpx;
}

.photo-box-white {
    width: 100%;
    padding: 20rpx 0 40rpx 0;
    background: #ffffff;
    flex-wrap: wrap;
}

.photo-small-box {
    width: 150rpx;
    height: 150rpx;
    font-size: 24rpx;
    border-radius: 5px;
    border: 1px solid #dfdfdf;
    margin-left: 22rpx;
    margin-top: 20rpx;
}

.upload-img-box {
    width: 150rpx;
    height: 150rpx;
    border-radius: 5px;
    margin-left: 22rpx;
    margin-top: 20rpx;
    position: relative;
}

.del-img {
    width: 32rpx;
    height: 32rpx;
    position: absolute;
    top: 0;
    right: 0;
    padding: 10rpx;
}

.photo-margin {
    margin-left: 50rpx;
}

.photo-img {
    width: 50rpx;
    height: 45rpx;
    margin-bottom: 20rpx;
    margin-top: 30rpx;
}

.rows {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.column {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.full {
    height: 100%;
    width: 100%;
}