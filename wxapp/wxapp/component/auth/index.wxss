cover-view {
    box-sizing: border-box;
}

.jump-bg {
    width: 100%;
    height: 100%;
    background-color: #000;
    background: rgba(0,0,0,0.3);
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    z-index: 100;
}

.center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.column {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.w-f {
    width: 100%;
}

.betweens {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.login-box {
    width: 500rpx;
    height: 600rpx;
    background: #ffffff;
    border-radius: 5px;
    padding: 40rpx 30rpx;
}

.login-title-font {
    font-size: 30rpx;
    font-weight: bold;
}

.login-des-font {
    font-size: 24rpx;
    color: #cccccc;
    margin-top: 20rpx;
}

.logo-img {
    width: 300rpx;
    height: 300rpx;
    margin: 30rpx 0 30rpx 0;
}

.login-no-btn {
    font-size: 24rpx;
    padding: 0;
    width: 140rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    margin: 0;
    border-radius: 35px;
    border: 1px solid #097bf1;
}

.login-yes-btn {
    font-size: 24rpx;
    color: #ffffff;
    width: 140rpx;
    height: 50rpx;
    text-align: center;
    border-radius: 35px;
    background: #097bf1;
    margin: 0;
    padding: 0;
    line-height: 50rpx;
}