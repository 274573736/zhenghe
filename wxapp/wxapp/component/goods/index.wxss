.goods_list {
    width: 100%;
    padding: 0 30rpx 0 10rpx;
    flex-wrap: wrap;
    background: #ffffff;
}

.goods_box {
    margin-left: 20rpx;
}

.goods_img {
    background: #ffffff;
    width: 216rpx;
    height: 170rpx;
    background: url("data:image/png;base64,") no-repeat center;
    background-size: 160rpx 100rpx;
    box-shadow: 0 0 5px #f7f7f7;
    color: #ffffff;
    padding-right: 36rpx;
}

.face_price_box {
    margin-top: 40rpx;
}

.face_price {
    font-size: 40rpx;
    font-weight: bold;
}

.face_font {
    font-size: 24rpx;
}

.goods_des {
    width: 216rpx;
    height: 150rpx;
    font-size: 28rpx;
}

.goods_des_price {
    margin: 20rpx 0;
}

.column {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.goods_des_num {
    color: #5870e6;
}

.row {
    display: flex;
    flex-direction: row;
}