.coupon-box {
    width: 670rpx;
    height: 200rpx;
    background: #ffffff;
    margin-bottom: 20rpx;
}

.coupon-left {
    width: 180rpx;
    height: 200rpx;
    background: #097bf1;
    color: #ffffff;
    font-size: 24rpx;
    position: relative;
}

.left-des {
    margin: 0 10rpx 0 30rpx;
    word-wrap: break-word;
}

.left-circle {
    width: 30rpx;
    height: 30rpx;
    background: #f3f3f3;
    border-radius: 50%;
    position: absolute;
    left: -15rpx;
}

.coupon-center {
    height: 200rpx;
    flex: 1;
}

.coupon-name {
    margin-top: 20rpx;
}

.coupon-money {
    font-size: 60rpx;
}

.coupon-center-des {
    font-size: 24rpx;
    color: #097bf1;
    margin: 30rpx 0 20rpx 0;
}

.coupon-center-time {
    font-size: 20rpx;
}

.coupon-right {
    width: 100rpx;
    height: 200rpx;
    position: relative;
}

.coupon-right-font {
    width: 30rpx;
    font-size: 28rpx;
    color: #097bf1;
}

.coupon-right-circle {
    width: 30rpx;
    height: 30rpx;
    background: #f3f3f3;
    border-radius: 50%;
    position: absolute;
    right: -15rpx;
}

.coupon-used {
    background: #dadada;
}

.coupons-used-font {
    color: #646464;
}

.search-box {
    width: 100%;
    height: 150rpx;
}

.form {
    width: 670rpx;
    height: 70rpx;
}

.conversion {
    flex: 1;
    height: 70rpx;
    padding-left: 40rpx;
    background: #ffffff;
    border-radius: 35px 0 0 35px;
}

.conversion-btn {
    width: 120rpx;
    height: 70rpx;
    background: #097bf1;
    color: #ffffff;
    font-size: 30rpx;
    border-radius: 0 35px 35px 0;
}

.conversion-btn:after {
    border: 0;
}

.full {
    height: 100%;
    width: 100%;
}

.rows {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.column {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.center-c {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.no-hint-font {
    color: #212330;
    font-size: 24rpx;
}