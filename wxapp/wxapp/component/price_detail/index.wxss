    width: 100%;
}

.item-top {
    width: 100%;
    height: 100rpx;
    font-size: 30rpx;
    padding: 0 35rpx;
    border-bottom: 1px solid #cccccc;
}

.top-close {
    font-size: 24rpx;
    color: #097bf1;
}

.item-contents {
    overflow: hidden;
    height: 222rpx;
    color: #999999;
    width: 100%;
    margin-top: 20rpx;
}

.icon-img {
    width: 29rpx;
    height: 29rpx;
}

.item-left {
    margin-left: 20rpx;
}

.item-left-box {
    margin-left: 50rpx;
}

.item-right {
    margin-right: 50rpx;
}

.item-space {
    width: 85rpx;
}

.item-content {
    font-size: 24rpx;
    margin-top: 40rpx;
}

.footer {
    padding: 60rpx 0 40rpx 0;
}

.btn {
    width: 200rpx;
    height: 80rpx;
    background: #097bf1;
    color: #ffffff;
    border-radius: 3px;
}

.betweens {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.rows {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.center {
    display: flex;
    justify-content: center;
    align-items: center;
}