.flex-c {
    width: 100%;
    height: 100%;
    background-color: #000;
    background: rgba(0,0,0,0.3);
    display: flex;
    flex-direction: column;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10;
    transition: all 0.3s;
    opacity: 0;
}

.flex-c.active {
    opacity: 1;
}

.bottom-date {
    width: 100%;
    background: #FFFFFF;
    position: absolute;
    bottom: 0;
    transition: all 0.3s;
    transform: translateY(100%);
}

.bottom-date.active {
    transform: translateY(0%);
}

