.top {
    width: 100%;
    height: 100rpx;
}

.top-box {
    width: 710rpx;
    height: 70rpx;
    padding: 0 20rpx;
    background: #ffffff;
    border-radius: 35px;
}

.laba-img {
    width: 30rpx;
    height: 27rpx;
    margin: 0 20rpx;
}

.swiper {
    width: 424rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 24rpx;
}

.top-title {
    color: #097bf1;
    margin-right: 20rpx;
}

.top-des {
    color: #97979d;
    font-size: 24rpx;
}

.top-time {
    color: #999999;
    font-size: 24rpx;
}

.rows {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.betweens {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.full {
    height: 100%;
    width: 100%;
}

.no-rows {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}