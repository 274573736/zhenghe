.standard-box {
    width: 100%;
    background: #ffffff;
    padding-bottom: 40rpx;
}

.standrad-top {
    height: 90rpx;
}

.betweens {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 0 36rpx;
}

.center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.standard-select-box {
    width: 100%;
    flex-wrap: wrap;
}

.select-item {
    width: 33.33%;
    height: 70rpx;
    margin-top: 20rpx;
}

.select-item-box {
    width: 150rpx;
    height: 70rpx;
    text-align: center;
    line-height: 70rpx;
    border-radius: 2px;
}

.item-active {
    background: #097bf1;
    color: #ffffff;
    border: none;
}

.standard-bottom {
    width: 100%;
    height: 150rpx;
}

.rows {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.less {
    height: 50rpx;
    width: 50rpx;
    border: 1px solid #cccccc;
    border-radius: 2px;
    font-size: 30rpx;
    color: #cccccc;
}

.add {
    height: 50rpx;
    width: 50rpx;
    border-radius: 2px;
    font-size: 30rpx;
    color: #ffffff;
    background: #097bf1;
}

.standard-bottom-num {
    font-size: 30rpx;
    margin: 0 20rpx;
}

.other {
    padding-left: 20rpx;
    width: 150rpx;
    border-radius: 3px;
    border: 1px solid #097bf1;
}

.confirm {
    color: #097bf1;
}