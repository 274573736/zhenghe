.map {
    width: 100%;
    height: 500rpx;
    position: relative;
}

.location-img {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    left: 20rpx;
    bottom: 40rpx;
}

.city-img {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    left: 20rpx;
    bottom: 150rpx;
}

.cover-mes {
    height: 70rpx;
    position: absolute;
    bottom: 20rpx;
    left: 0;
    right: 0;
}

.cover-mes-item {
    height: 100rpx;
    width: 100%;
    font-size: 30rpx;
    padding: 0 30rpx;
    background: #ffffff;
    border-bottom: 1px solid #eeeeee;
}

.item-des {
    font-size: 24rpx;
    margin-left: 20rpx;
}

.pick_code {
    color: #097bf1;
    font-weight: bold;
}

.laba-img {
    width: 28rpx;
    height: 28rpx;
    margin: 0 30rpx;
}

.center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.rows {
    display: flex;
    flex-direction: row;
    align-items: center;
}