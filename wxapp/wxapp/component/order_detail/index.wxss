.w-f {
    width: 100%;
}

.row {
    display: flex;
    flex-direction: row;
}

.rows {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.column {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.betweens {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.address-box {
    margin: 20rpx 0;
    padding: 0 40rpx;
    background: #ffffff;
}

.address_icon {
    height: 35rpx;
    width: 35rpx;
    margin-right: 30rpx;
}

.address-item {
    width: 100%;
    padding: 20rpx 0;
}

.address-line {
    border-top: 1px solid #ebebeb;
    margin-left: 50rpx;
}

.address-item-right-title {
}

.address-item-right-detail {
    font-size: 24rpx;
    color: #999999;
}

.order-box {
    padding: 0 40rpx;
    background: #ffffff;
}

.order-item {
    padding: 30rpx 0;
}

.order-box .order-item:nth-child(n+3) {
    border-top: 1px solid #ebebeb;
}

.order-box .betweens:nth-of-type(2) {
    border-top: 1px solid #ebebeb;
}

.order-item-left {
    color: #808080;
    min-width: 180rpx;
}

.order-item-left-left {
    color: #808080;
}

.order-item-right-right {
    min-width: 100rpx;
    text-align: right;
}

.order-item-right {
    flex-grow: 1;
}

.price-question-box {
    align-items: baseline;
}

.price-question {
    width: 30rpx;
    height: 30rpx;
    margin-left: 10rpx;
}

.service {
    width: 250rpx;
    height: 80rpx;
    background: #097bf1;
    color: #ffffff;
    border-radius: 5px;
    margin: 70rpx 0 35rpx 30rpx;
}

.index-btn {
    width: 250rpx;
    height: 80rpx;
    color: #097bf1;
    background: #ffffff;
    border-radius: 5px;
    margin: 70rpx 0 35rpx 0;
}

.box {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: 999;
    height: 100%;
}

.u-index {
    background-color: #000;
    background: rgba(0,0,0,0.3);
    z-index: 10;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 500rpx;
}

.m {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 10;
}

.pick-img {
    width: 80rpx;
    height: 80rpx;
    margin-right: 20rpx;
}