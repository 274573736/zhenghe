.bottom-date {
    width: 100%;
    background: #FFFFFF;
    position: fixed;
    bottom: 0;
    z-index: 100;
    transition: all 0.3s;
    transform: translateY(100%);
}

.bottom-date.active {
    transform: translateY(0%);
}

.flex-c {
    width: 100%;
    height: 100%;
    display: flex;
    background-color: #000;
    background: rgba(0,0,0,0.3);
    flex-direction: column;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10;
    transition: all 0.3s;
    opacity: 0;
}

.flex-c.active {
    opacity: 1;
}

.anjian-quxiao {
    padding: 20rpx;
}

.standard-box {
    width: 100%;
    background: #ffffff;
}

.standrad-top {
    font-size: 32rpx;
    width: 100%;
    height: 100rpx;
    padding: 0 20rpx;
    background: #dadada;
}

.betweens {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 0 36rpx;
}

.center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.standard-select-box {
    width: 100%;
    flex-wrap: wrap;
}

.select-item {
    width: 33.33%;
    height: 70rpx;
    margin-top: 20rpx;
}

.select-item-box {
    width: 150rpx;
    height: 70rpx;
    border: 1px solid #cccccc;
    border-radius: 2px;
}

.item-active {
    background: #097bf1;
    color: #ffffff;
    border: none;
}

.standard-bottom {
    width: 100%;
    height: 150rpx;
}

.rows {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.less {
    height: 50rpx;
    width: 50rpx;
    border: 1px solid #cccccc;
    border-radius: 2px;
    font-size: 30rpx;
    color: #cccccc;
}

.add {
    height: 50rpx;
    width: 50rpx;
    border-radius: 2px;
    font-size: 30rpx;
    color: #ffffff;
    background: #097bf1;
}

.standard-bottom-num {
    font-size: 30rpx;
    margin: 0 20rpx;
}

.other {
    font-size: 24rpx;
    width: 150rpx;
    text-align: center;
    border-radius: 3px;
    border: 1px solid #097bf1;
}

.confirm {
    color: #097bf1;
}

.z-index {
    background-color: #000;
    background: rgba(0,0,0,0.3);
    flex: 1;
}