.box {
    width: 100%;
    background: #f3f3f3;
}

.help-box {
    width: 100%;
    padding: 20rpx 0 40rpx 0;
}

.s-btn {
    width: 200rpx;
    height: 60rpx;
    color: #808080;
    font-weight: bold;
    border: 1px solid #d5d5d5;
    border-radius: 35px;
    position: relative;
}

.address-y-img {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: -4rpx;
    right: -8rpx;
}

.margin-left {
    margin-left: 60rpx;
}

.address-active {
    color: #ffffff;
    background: #097bf1;
    border: 0;
}

.address-box {
    width: 710rpx;
    background: #ffffff;
    padding-left: 20rpx;
    border-radius: 5px;
}

.address-row {
    padding: 20rpx 20rpx 20rpx 0;
}

.address-img {
    width: 35rpx;
    height: 44rpx;
    margin-right: 20rpx;
}

.address-detail {
    color: #808080;
    width: 600rpx;
    font-size: 24rpx;
    margin-top: 10rpx;
}

.address-line {
    width: 100%;
    border-bottom: 1px solid #f5f5f5;
}

.red-font {
    font-size: 24rpx;
    margin-left: 30rpx;
    color: red;
}

.betweens {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.rows {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.column {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.center-r {
    display: flex;
    flex-direction: row;
    justify-content: center;
}