.top {
    width: 100%;
    height: 300rpx;
    background: #ffffff;
}

.top-top {
    font-weight: bold;
    margin-top: 40rpx;
}

.top-center {
    color: #999999;
    font-size: 24rpx;
    margin: 40rpx 0;
}

.top-bottom {
    width: 180rpx;
    height: 60rpx;
    font-size: 24rpx;
    border: 1px solid #999999;
    border-radius: 3px;
}

.center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.column {
    display: flex;
    flex-direction: column;
    align-items: center;
}