.big-box {
    width: 100%;
    padding: 0 20rpx 20rpx 20rpx;
}

.box {
    width: 100%;
    background: #ffffff;
    padding: 20rpx 0 0 20rpx;
    border-radius: 5px;
    margin-top: 20rpx;
}

.name {
    color: #212330;
}

.tel {
    color: #212330;
    margin-left: 50rpx;
}

.address-name {
    color: #212330;
    font-size: 28rpx;
    margin: 20rpx 0;
}

.address-des {
    color: #787b83;
    font-size: 24rpx;
    margin-bottom: 20rpx;
}

.footer {
    color: #212330;
    padding: 30rpx 20rpx 30rpx 0;
    border-top: 1px solid #ebebeb;
}

.re-img {
    width: 45rpx;
    height: 44rpx;
    margin-right: 20rpx;
}

.del-img {
    width: 37rpx;
