.container {
    background: #ffffff;
    width: 100%;
    flex-grow: 1;
    margin-top: 20rpx;
}

.no-message-font {
    color: #dce8e6;
}

.top {
    height: 100rpx;
    background: #ffffff;
    width: 100%;
    box-shadow: 0 0 10px #999999;
}

.top-left {
    padding: 0 10rpx;
    width: 150rpx;
    height: 100%;
    border-right: 1px solid #eeeeee;
    margin-right: 20rpx;
}

.top-left-city {
    white-space: nowrap;
    overflow: hidden;
    padding: 0 5px;
}

.city-img {
    height: 25rpx;
    width: 14rpx;
    margin-left: 10rpx;
}

.gray-view {
    width: 100%;
    height: 30rpx;
    background-color: #eeeeee;
}

.input-search {
    flex-grow: 1;
}

.clear-img {
    height: 40rpx;
    width: 40rpx;
    margin: 0 40rpx;
}

