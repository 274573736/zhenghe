page {
    background: #ffffff;
}

.top {
    width: 100%;
    height: 130rpx;
    padding: 0 40rpx;
}

.top-money {
    color: #097bf1;
}

.color-box {
    width: 100%;
    height: 20rpx;
    background: #f3f3f3;
}

.input-box {
    width: 100%;
    height: 100rpx;
    padding: 0 40rpx;
    border-bottom: 1px solid #f3f3f3;
}

.money-input {
    text-align: right;
}

.item-box {
    width: 100%;
    flex-wrap: wrap;
    padding: 20rpx 40rpx;
}

.item {
    width: 320rpx;
    height: 140rpx;
    border-radius: 5px;
    border: 1px solid #097bf1;
    margin-bottom: 20rpx;
}

.item-coupons {
    font-size: 24rpx;
    color: #097bf1;
    margin-top: 10rpx;
}

.item-active {
    color: #ffffff;
    background: #097bf1;
}

.item:nth-of-type(even) {
    margin-left: 20rpx;
}

.pay-des {
    font-weight: bold;
    padding: 10rpx 40rpx;
}

.method-box {
    padding: 40rpx 40rpx;
}

.pay-font {
    margin-left: 20rpx;
}

.s-img {
    width: 44rpx;
    height: 44rpx;
}

.cooperation {
    color: #097bf1;
}

.recharge-btn {
    width: 580rpx;
    height: 90rpx;
    background: #097bf1;
    color: #ffffff;
    border-radius: 35px;
    margin: 40rpx 0;
}