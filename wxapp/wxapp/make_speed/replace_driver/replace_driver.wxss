.searchWrap {
    background-color: #efefef;
    height: 80rpx;
    justify-content: center;
    padding-top: 20rpx;
}

.searchBox {
    width: 92%;
    height: 60rpx;
    background-color: #fff;
    margin: 0 30rpx;
    border-radius: 20rpx;
    font-size: 30rpx;
    justify-content: center;
    display: flex;
    align-items: center;
}

.searchBox icon {
    margin: 0 10rpx;
}

.searchBox input {
    flex: 1 1 auto;
}

.bannerImgs {
    width: 690rpx;
    margin: 20rpx 30rpx 50rpx;
    height: 300rpx;
    border-radius: 10rpx;
}

.jxList {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.jxImgs {
    width: 320rpx;
    height: 180rpx;
    border-radius: 10rpx;
}

.jxItem {
    margin-bottom: 50rpx;
}

.jxBox {
    font-size: 30rpx;
    padding: 0 30rpx;
}

.jxTitle {
    font-weight: bold;
    margin-bottom: 30rpx;
}

.swiper {
    width: 750rpx;
    height: 210rpx;
    margin: 20rpx 0;
}

.slide-image {
    width: 710rpx;
    height: 210rpx;
}

.price-box {
    width: 710rpx;
    background: #ffffff;
    margin-top: 20rpx;
    padding: 70rpx 0 60rpx 0;
}

.price-1 {
    color: #808080;
    font-size: 24rpx;
}

.price-2 {
    color: #212330;
    font-size: 34rpx;
    align-items: baseline;
}

.price-2-num {
    font-size: 60rpx;
    font-weight: bold;
    margin: 0 10rpx;
}

.price-3 {
    color: #212330;
    font-size: 24rpx;
}

.property-box {
    width: 710rpx;
    background: #ffffff;
    margin-top: 20rpx;
    padding-left: 20rpx;
}

.property-item {
    padding: 30rpx 20rpx 30rpx 0;
}

.property-item:nth-of-type(n+1) {
    border-top: 1px solid #f5f5f5;
}

.footer {
    width: 100%;
}

.confirm-btn {
    width: 670rpx;
    height: 100rpx;
    color: #ffffff;
    font-size: 36rpx;
    border-radius: 35px;
    background: #212330;
    margin: 70rpx 0 30rpx 0;
}

.confirm-btn {
    border: 0;
}

.no-rows {
    width: 360rpx;
    text-align: right;
}

.red-des-font {
    color: #ff0000;
    font-size: 26rpx;
    margin-bottom: 40rpx;
}

.white-space {
    width: 100%;
    height: 60rpx;
}

.weight-btn {
    width: 50rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    border-radius: 5px;
}

.coupon-font {
    color: red;
}

.box-space {
    width: 100%;
    height: 100rpx;
}

.red {
}

.distance {
    font-size: 26rpx;
}