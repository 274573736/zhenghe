.box-body {
    width: 100%;
    padding: 0 40rpx 20rpx 40rpx;
}

.box {
    font-size: 28rpx;
    width: 100%;
    background: #ffffff;
    border-radius: 5px;
}

.box:nth-of-type(n+2) {
    margin-top: 20rpx;
}

.box-top {
    width: 100%;
    height: 80rpx;
    padding: 0 20rpx;
    border-bottom: 1px solid #e5e5e5;
}

.order-num {
    color: #808080;
    margin-left: 20rpx;
}

.order-status {
    color: #f10909;
}

.box-center {
    width: 100%;
    padding: 30rpx 40rpx;
}

.line-blue {
    min-width: 190rpx;
    height: 2px;
    background: #097bf1;
    margin: 15rpx 30rpx 0 30rpx;
}

.box-address-title {
    color: #212330;
    font-weight: bold;
    width: 180rpx;
}

.box-person-name {
    color: #808080;
    margin: 10rpx 0;
    width: 180rpx;
}

.box-person-tel {
    color: #808080;
    width: 180rpx;
}

.box-footer {
    width: 100%;
    height: 80rpx;
    padding: 0 20rpx;
    border-top: 1px solid #e5e5e5;
}

.order-type {
    font-weight: bold;
}

.order-time {
    color: #808080;
    margin-left: 30rpx;
}

.title-box {
    margin-bottom: 15rpx;
}

.box2-person-tel {
    color: #808080;
    margin-left: 20rpx;
}