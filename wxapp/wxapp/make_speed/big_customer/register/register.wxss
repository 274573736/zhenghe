.item {
    width: 100%;
    height: 100rpx;
    padding-left: 40rpx;
    background: #ffffff;
}

.item:nth-of-type(n+2) {
    border-top: 1px solid #e9e9e9;
}

.vertical {
    width: 5rpx;
    height: 30rpx;
    background: #212330;
    margin-right: 20rpx;
}

.vertical-font {
    font-weight: bold;
}

input {
    font-size: 28rpx;
}

.blue-font {
    color: #087bf0;
    font-size: 22rpx;
    font-weight: bold;
    margin: 10rpx 0 5rpx 0;
}

.main {
    width: 100%;
    background: #ffffff;
    margin-top: 20rpx;
}

.photo-box {
    width: 280rpx;
    height: 250rpx;
    border: 1px solid #e9e9e9;
    border-radius: 5px;
    margin-bottom: 20rpx;
}

.m-4 {
    margin-left: 40rpx;
    margin-right: 60rpx;
}

.line-box {
    width: 100%;
    padding: 0 40rpx;
    margin-bottom: 10rpx;
}

.line {
    width: 670rpx;
    height: 1px;
    background: #e9e9e9;
}

.f-2 {
    font-size: 22rpx;
    font-weight: bold;
}

.photo-img {
    width: 50rpx;
    height: 45rpx;
    margin-bottom: 30rpx;
}

.upload-box {
    width: 130rpx;
    height: 130rpx;
    background: #ededed;
    position: relative;
    margin: 30rpx 30rpx 0 0;
}

.heng {
    width: 38rpx;
    height: 2rpx;
    background: #9a9a9a;
}

.shu {
    width: 2rpx;
    height: 38rpx;
    background: #9a9a9a;
    position: absolute;
    right: 63rpx;
}

.bog-box {
    width: 100%;
    background: #ffffff;
    padding: 30rpx 0 40rpx 30rpx;
}

.box {
    width: 130rpx;
    height: 130rpx;
    margin: 30rpx 30rpx 0 0;
    position: relative;
}

.store-img {
    width: 130rpx;
    height: 130rpx;
}

.del-icon {
    width: 30rpx;
    height: 30rpx;
    padding: 10rpx;
    position: absolute;
    right: -20rpx;
    top: -20rpx;
}

.footer {
    width: 100%;
    height: 100rpx;
    margin-top: 46rpx;
    background: #ffffff;
}

.btn {
    width: 50%;
    height: 100rpx;
    line-height: auto;
    font-size: 30rpx;
    font-weight: bold;
    border-radius: 0;
}

.upload-box-big {
    flex-wrap: wrap;
}

.btn:after {
    border: none;
}

.btn:nth-of-type(2) {
    background: #087bf0;
    color: #ffffff;
}