.photo-box {
    width: 100%;
    padding: 0 20rpx;
}

.play-big-box {
    width: 100%;
    padding: 20rpx;
    background: #ffffff;
}

.voice-img {
    width: 26rpx;
    height: 40rpx;
}

.play-box {
    width: 550rpx;
    height: 50rpx;
    color: #ffffff;
    background: #98cbff;
    border-radius: 35px;
    margin-left: 20rpx;
}

.play-img {
    width: 18rpx;
    height: 24rpx;
    padding: 15rpx;
}

.play-close-img {
    width: 30rpx;
    height: 30rpx;
    padding: 15rpx;
}

.scroll-view {
    width: 710rpx;
    padding: 20rpx;
    background: #ffffff;
    overflow: hidden;
    white-space: nowrap;
    box-sizing: border-box;
    margin-top: 20rpx;
}

.scroll-item {
    width: 160rpx;
    display: inline-flex;
    text-align: center;
}

.img-box {
    width: 110rpx;
    height: 110rpx;
    border-radius: 100%;
    background: #cee5fc;
}

.scroll-item-img {
    width: 80rpx;
    height: 70rpx;
}

.m-b {
    margin-bottom: 10rpx;
}

.scroll-font {
    font-size: 24rpx;
    color: #54575e;
    margin-top: 20rpx;
}

.font-active {
    color: #097bf1;
}

.textarea-box {
    width: 100%;
    height: 200rpx;
    background: #ffffff;
    padding: 20rpx 20rpx 0 20rpx;
}

.textarea-title {
    font-weight: bold;
    margin-bottom: 20rpx;
}

.textarea {
    width: 100%;
    height: 120rpx;
    font-size: 24rpx;
}

.address-box {
    width: 710rpx;
    background: #ffffff;
    padding: 20rpx 0;
}

.address-img {
    width: 40rpx;
    height: 50rpx;
    padding: 0 20rpx;
}

.address-title {
    font-weight: bold;
}

.address-tel {
    color: #808080;
    font-size: 24rpx;
    margin-left: 20rpx;
}

.address-des {
    color: #808080;
    font-size: 24rpx;
    width: 620rpx;
}

.address-btn {
    width: 80rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    color: #ffffff;
    background: #212330;
    border-radius: 3px;
}

.address-right {
    padding: 0 20rpx 0 40rpx;
    border-left: 1px solid #d2d2d2;
}

.item-row {
    width: 100%;
    padding: 30rpx 20rpx;
    background: #ffffff;
}

.time-img {
    width: 36rpx;
    height: 36rpx;
}

.line-box {
    width: 100%;
    padding-left: 20rpx;
    background: #ffffff;
}

.line {
    border-top: 1px solid #e9e9e9;
}

.item-font {
    font-size: 28rpx;
    margin-left: 20rpx;
}

.item-half {
    width: 335rpx;
}

.item-half:nth-of-type(1) {
    border-right: 1px solid #e9e9e9;
}

.info-img {
    width: 30rpx;
    height: 34rpx;
}

.info-img-box {
    width: 30rpx;
    height: 34rpx;
}

.box-two {
    margin: 0 20rpx;
}

input {
    width: 280rpx;
}

.bargain-img {
    width: 35rpx;
    height: 35rpx;
}

.slider {
    margin: 20rpx 0 30rpx 0;
}

.slider-box {
    width: 710rpx;
    background: #ffffff;
    padding: 20rpx 20rpx 40rpx 20rpx;
}

.select-btn {
    width: 100rpx;
    height: 40rpx;
    color: #097bf1;
    font-size: 24rpx;
    font-weight: bold;
    border: 1px solid #097bf1;
    border-radius: 35px;
}

.slider-font {
    font-weight: bold;
}

.slider-money {
    color: #097bf1;
}

.slider-font-des {
    font-size: 24rpx;
    color: #808088;
    margin-top: 40rpx;
}

.footer {
    width: 100%;
    padding: 30rpx 30rpx;
    background: #ffffff;
    position: fixed;
    bottom: 0;
}

.box-space {
    width: 100%;
    height: 180rpx;
}

.index-box {
    width: 670rpx;
    background: #ffffff;
    border-radius: 3px;
    z-index: 1000;
    position: relative;
}

.index-title {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 28rpx;
    font-weight: bold;
    border-bottom: 1px solid #e0e0e0;
}

.index-input {
    width: 590rpx;
    height: 80rpx;
    background: #dddddd;
    border-radius: 3px;
    margin: 60rpx 0;
}

.index-input>view {
    width: 150rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
}

.index-footer {
    width: 100%;
    height: 100rpx;
    border-top: 1px solid #e0e0e0;
}

.cancel-input {
    width: 50%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
}

.confirm-input {
    width: 50%;
    height: 100rpx;
    color: #ffffff;
    background: #097bf1;
    text-align: center;
    line-height: 100rpx;
}