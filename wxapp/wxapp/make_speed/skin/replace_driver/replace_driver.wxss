.swiper {
    width: 750rpx;
    height: 210rpx;
    margin: 20rpx 0;
}

.slide-image {
    width: 710rpx;
    height: 210rpx;
}

.price-box {
    width: 710rpx;
    background: #ffffff;
    margin-top: 20rpx;
    padding: 10rpx 0 60rpx 0;
}

.red-des-font {
    color: #ff0000;
    font-size: 26rpx;
    margin-bottom: 40rpx;
}

.price-1 {
    color: #808080;
    font-size: 24rpx;
}

.white-space {
    width: 100%;
    height: 60rpx;
}

.price-2 {
    color: #212330;
    font-size: 34rpx;
    align-items: baseline;
}

.price-2-num {
    font-size: 60rpx;
    font-weight: bold;
    margin: 0 10rpx;
}

.price-3 {
    color: #212330;
    font-size: 24rpx;
}

.property-box {
    width: 710rpx;
    background: #ffffff;
    margin-top: 20rpx;
    padding-left: 20rpx;
}

.property-item {
    padding: 30rpx 20rpx 30rpx 0;
}

.property-item:nth-of-type(n+1) {
    border-top: 1px solid #f5f5f5;
}

.confirm-btn {
    width: 670rpx;
    height: 90rpx;
    color: #ffffff;
    font-size: 36rpx;
    border-radius: 35px;
    background: #212330;
}

.confirm-btn:after {
    border: 0;
}

.no-rows {
    width: 360rpx;
    text-align: right;
}

.weight-btn {
    width: 50rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    border-radius: 5px;
}

.coupon-font {
    color: red;
}

.footer {
    width: 100%;
    padding: 30rpx 30rpx;
    background: #ffffff;
    position: fixed;
    bottom: 0;
}

.box-space {
    width: 100%;
    height: 180rpx;
}

.red {
}

.distance {
    font-size: 26rpx;
}