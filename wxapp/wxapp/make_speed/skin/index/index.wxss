::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

swiper.square-dot .wx-swiper-dot {
    background-color: #fff;
    opacity: 0.4;
    width: 10rpx;
    height: 10rpx;
    border-radius: 20rpx;
    transition: all 0.3s ease-in-out 0s;
}

swiper.square-dot .wx-swiper-dot.wx-swiper-dot-active {
    opacity: 1;
    width: 30rpx;
}

.card-swiper {
    height: 200rpx;
}

.card-swiper swiper-item {
    width: 610rpx!important;
    box-sizing: border-box;
    padding: 10rpx 0rpx 0rpx;
    overflow: initial;
}

.card-swiper swiper-item .swiper-item {
    width: 100%;
    display: block;
    height: 100%;
    border-radius: 10rpx;
    transform: scale(0.9);
    transition: all 0.2s ease-in 0s;
    overflow: hidden;
}

.card-swiper swiper-item.cur .swiper-item {
    transform: none;
    transition: all 0.2s ease-in 0s;
}

.top {
    width: 100%;
    height: 100rpx;
    background: #ffffff;
}

.logo-box {
    padding: 0 40rpx;
}

.logo-img {
    width: 60rpx;
    height: 60rpx;
}

.avatar-img {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    overflow: hidden;
}

.top-rows {
    flex: 1;
    height: 100rpx;
    color: #808088;
}

.top-rows-scroll {
    width: 608rpx;
    background: #ffffff;
    white-space: nowrap;
    box-sizing: border-box;
    padding: 0 20rpx;
}

.scroll-top-item {
    display: inline-flex;
    margin-right: 30rpx;
}

.line-c {
    width: 2rpx;
    height: 40rpx;
    background: #dedede;
}

.line {
    width: 40rpx;
    height: 6rpx;
    background: #ffffff;
    border-radius: 35px;
    margin-top: 10rpx;
}

.line-active {
    background: #097bf1;
}

.font-active {
    color: #212330;
    font-weight: bold;
}

.map {
    flex: 1;
    position: relative;
}