.full {
    display: flex;
    flex-direction: column;
}

.homemaking-box {
    flex: 1;
    background: #f6f6f9;
}

.list {
    background: #ffffff;
    box-shadow: 0 10px 5px #e7e7e9;
}

.item-type {
    width: 172rpx;
    height: 110rpx;
    position: relative;
}

.item-select {
    width: 10rpx;
    height: 110rpx;
    background: #097bf1;
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
}

.server-select {
    color: #097bf1;
    background: #fafafb;
}

.flex-c {
    width: 560rpx;
    height: 100%;
    margin-left: 20rpx;
}

.top-title {
    font-weight: bold;
    width: 560rpx;
    height: 110rpx;
    background: #f6f6f9;
    padding-left: 50rpx;
    line-height: 110rpx;
}

.child-scroll {
    box-sizing: border-box;
    width: 560rpx;
    padding-right: 20rpx;
    display: flex;
    flex-direction: column;
    flex: 1;
    background: #f6f6f9;
}

.child-box {
    width: 100%;
    border-radius: 5px;
    background: #ffffff;
    box-shadow: 0px 8px 5px #e7e7e9;
}

.child-item {
    width: 100%;
    padding: 30rpx 30rpx 24rpx 30rpx;
}

.child-line-box {
    width: 100%;
    padding: 0 10rpx 0 30rpx;
}

.child-line {
    width: 100%;
    height: 1px;
    background: #e5e5e5;
}

.child-img {
    width: 70rpx;
    height: 70rpx;
    margin-right: 14rpx;
}

.child-des {
    font-size: 26rpx;
    color: #999999;
    margin-top: 10rpx;
}

.view-hover {
    background: #f6f6f9;
}