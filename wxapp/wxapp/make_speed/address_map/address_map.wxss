page {
    height: 100%;
    background: #FFFFFF;
}

.top {
    width: 100%;
    height: 100rpx;
}

.top-row {
    width: 670rpx;
    height: 60rpx;
    border-radius: 35px;
    border: 1px solid #cccccc;
}

.address-searhc-img {
    width: 27rpx;
    height: 27rpx;
    margin: 0 20rpx;
}

.input-placeholder {
    font-size: 24rpx;
    color: #212330;
}

.map {
    width: 100%;
    height: 40%;
    position: relative;
}

.cover-view-big {
    position: absolute;
    left: 0;
    right: 0;
    text-align: center;
    bottom: 50%;
    width: 100%;
    margin-bottom: 90rpx;
}

.cover-view {
    background: #595551;
    color: #FFFFFF;
    width: auto;
    display: inline-block!important;
    display: inline;
    padding: 10rpx 20rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    vertical-align: middle;
    border-radius: 30rpx;
}

.map_label {
    width: 56rpx;
    height: 68rpx;
    position: absolute;
    right: 50%;
    bottom: 50%;
    margin-right: -20rpx;
}

.location-img {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    left: 20rpx;
    bottom: 40rpx;
}

.srcoll-view {
    display: flex;
    flex-direction: column;
    width: 90%;
    height: 52%;
    padding: 10rpx 5%;
}

.scroll-view-tiem {
    padding: 40rpx 0;
    border-bottom: 1px solid #ebebeb;
}

