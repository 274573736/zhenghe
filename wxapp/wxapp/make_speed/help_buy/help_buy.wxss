.photo-box {
    width: 100%;
    padding: 0 20rpx;
}

.scroll-view {
    width: 710rpx;
    padding: 20rpx;
    background: #ffffff;
    overflow: hidden;
    white-space: nowrap;
    box-sizing: border-box;
    margin-top: 20rpx;
}

.scroll-item {
    width: 160rpx;
    display: inline-block;
    text-align: center;
}

.scroll-item:nth-of-type(n+1) {
}

.scroll-item-img {
    width: 80rpx;
    height: 70rpx;
}

.scroll-font {
    font-size: 24rpx;
    color: #54575e;
    margin-top: 20rpx;
}

.textarea-box {
    width: 100%;
    height: 200rpx;
    background: #ffffff;
    padding: 20rpx;
}

.textarea-title {
    font-weight: bold;
    margin-bottom: 20rpx;
}

.textarea {
    width: 100%;
    height: 120rpx;
    font-size: 24rpx;
}

.property-box {
    width: 710rpx;
    background: #ffffff;
    margin-top: 20rpx;
    padding-left: 20rpx;
}

.bargain-img {
    width: 35rpx;
    height: 35rpx;
}

.property-item {
    padding: 30rpx 20rpx 30rpx 0;
}

.property-item:nth-of-type(n+1) {
    border-top: 1px solid #f5f5f5;
}

.footer {
    width: 100%;
    padding: 80rpx 0 30rpx 0;
}

.active-goods-font {
    color: #097bf1;
}

.active-font {
    color: #097bf1;
    font-weight: bold;
}

.no-rows {
    width: 360rpx;
    text-align: right;
}

.weight-btn {
    width: 50rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    border-radius: 5px;
}

.weight-input {
    width: 60rpx;
    text-align: center;
    margin: 0 10rpx;
}

.reduce-weight {
    border: 1px solid #cccccc;
}

.add-weight {
    color: #ffffff;
    background: #097bf1;
}

.coupon-font {
    color: red;
}

.box-space {
    width: 100%;
    height: 100rpx;
}

.red {
    color: #ff0000;
}