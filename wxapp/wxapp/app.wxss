page {
    height: 100%;
    width: 100%;
    color: #212330;
    font-size: 30rpx;
    background-color: #f3f3f3;
    font-family: "PingFang SC","Source Han Sans CN";
}

.font-color {
    color: #ff0000;
}

view {
    box-sizing: border-box;
}

.icon_r {
    height: 25rpx;
    width: 14rpx;
}

.center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.around {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
}

.column-c {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.center-c {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.center-m-c {
    display: flex;
    flex-direction: column;
    align-content: center;
    align-items: center;
}

.center-r {
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.between {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.betweens {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.row {
    display: flex;
    flex-direction: row;
}

.rows {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.column {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.flex-c {
    display: flex;
    flex-direction: column;
}

.flex-y {
    flex: 1;
}

.columns {
    display: flex;
    flex-direction: column;
}

.jump-bg {
    width: 100%;
    height: 100%;
    background-color: #000;
    background: rgba(0,0,0,0.3);
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    z-index: 100;
}

.z-index {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background-color: #000;
    background: rgba(0,0,0,0.3);
    z-index: 10;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.icon-img {
    width: 50rpx;
    height: 50rpx;
}

.no-row {
    word-break: keep-all;
    white-space: nowrap;
}

.no-rows {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.w-h {
    width: 50%;
}

.w-f {
    width: 100%;
}

.full {
    height: 100%;
    width: 100%;
}

.price-question {
    width: 30rpx;
    height: 30rpx;
    margin-left: 10rpx;
}

.property-r-img {
    width: 10rpx;
    height: 19rpx;
    margin-left: 20rpx;
}

.view-box {
    width: 100%;
    height: 20rpx;
    background: #f3f3f3;
}

.view-white-box {
    width: 100%;
    height: 20rpx;
    background: #ffffff;
}

.no-hint-font {
    color: #212330;
    font-size: 24rpx;
}

button:after {
    border: 0;
}

button {
    background: #ffffff;
    padding: 0;
    margin: 0;
    line-height: normal;
}

.speed-pone {
    font-size: 30rpx;
    width: 160rpx;
    height: 50rpx;
    color: #ffffff;
    background: #212330;
    border-radius: 5px;
    margin: 10rpx;
}

.red {
    color: #ff0000;
}

.coupon-font {
    color: red;
}