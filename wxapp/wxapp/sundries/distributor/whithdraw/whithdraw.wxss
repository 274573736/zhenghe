.top-space {
    width: 100%;
    height: 20rpx;
    background: #f3f3f3;
}

.box {
    width: 100%;
    padding: 30rpx 20rpx 30rpx 30rpx;
    background: #FFFFFF;
}

.placeholder-money {
    color: #999999;
    font-size: 50rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.money {
    color: #097bf1;
    font-size: 50rpx;
    height: 60rpx;
    line-height: 60rpx;
}

.money-text {
    color: #999999;
    font-size: 50rpx;
    margin-right: 30rpx;
}

.input-box {
    padding: 40rpx 0;
    border-bottom: 1px solid #eeeeee;
}

.whithdraw-font-box {
    padding: 20rpx 0 40rpx 0;
}

.whithdraw-font {
    color: #097bf1;
}

.yes-icon {
    width: 48rpx;
    height: 48rpx;
    margin-right: 10rpx;
    margin-left: 40rpx;
}

.group-title {
    padding: 34rpx 0;
}

.input {
    width: 90%;
    height: 70rpx;
    border: 1px solid #eeeeee;
    border-radius: 5px;
    padding-left: 10rpx;
}

.footer {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
}

.footer-btn {
    width: 680rpx;
    height: 90rpx;
    color: #ffffff;
    background: #097bf1;
    font-size: 40rpx;
    border-radius: 5px;
    margin: 60rpx 0 30rpx 0;
}

.footer-font {
    color: #999999;
    margin-bottom: 60rpx;
}