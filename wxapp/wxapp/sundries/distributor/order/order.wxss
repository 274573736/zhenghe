.order-item {
    width: 100%;
    background: #FFFFFF;
}

.top-space {
    width: 100%;
    height: 20rpx;
    background: #f3f3f3;
}

.item-top {
    padding: 40rpx 30rpx 20rpx 50rpx;
}

.order-code {
    color: #666666;
}

.item-content {
    padding: 37rpx 30rpx 37rpx 50rpx;
    border-top: 1px solid #ececec;
    border-bottom: 1px solid #ececec;
}

.head-img {
    width: 128rpx;
    height: 128rpx;
    border-radius: 5px;
    margin-right: 37rpx;
}

.item-footer {
    padding: 30rpx 30rpx 30rpx 50rpx;
}

.order-status {
    color: #097bf1;
    font-weight: bold;
}