.address-sign {
    padding: 40rpx;
    font-weight: bold;
    width: 100%;
    height: 100rpx;
    border-bottom: 1px solid #f7f7f7;
    background: #ffffff;
}

.top-first {
    font-weight: bold;
    width: 100%;
    padding: 30rpx 40rpx 30rpx 0;
    border-bottom: 1px solid #f7f7f7;
}

.address-sign-des {
    color: #808088;
    font-size: 20rpx;
}

.address-img {
    width: 31rpx;
    height: 31rpx;
    margin-right: 40rpx;
}

.item-box {
    padding: 0 40rpx;
    width: 100%;
    background: #ffffff;
}

.address-item {
    padding: 30rpx 0;
}

.address-des {
    color: #808088;
    font-size: 24rpx;
}

.item-right-font {
    color: #808088;
    margin-right: 20rpx;
}

.view-line-box {
    width: 100%;
    padding-left: 70rpx;
}

.line {
    width: 100%;
    height: 1px;
    background: #f7f7f7;
}

.item-view {
    width: 100%;
    background: #ffffff;
    padding-left: 40rpx;
}

.f-w {
    font-size: 34rpx;
}

.item {
    width: 100%;
    padding: 30rpx 40rpx 30rpx 0;
    border-top: 1px solid #f7f7f7;
}

.item-right {
    color: #808088;
}

.item-right-input {
    text-align: right;
}

.item-right-img {
    width: 14rpx;
    height: 24rpx;
    margin-left: 20rpx;
}

.item-left-font-des {
    font-size: 24rpx;
}

.item-left-des {
    color: #808088;
    font-size: 24rpx;
}

.price-des-img {
    width: 26rpx;
    height: 26rpx;
}

.f-r {
    color: #ff0000;
}

.footer {
    width: 100%;
    height: 150rpx;
    position: fixed;
    bottom: 0rpx;
}

.confirm-btn {
    color: #ffffff;
    background: #212330;
    width: 670rpx;
    height: 90rpx;
    font-size: 36rpx;
    border-radius: 35px;
}

.confirm-btn:after {
    border: 0;
}

.no-use {
    border: 1px solid #f16623;
    padding: 10rpx 20rpx;
    border-radius: 35px;
    color: #f16623;
    font-size: 24rpx;
    margin-right: 20rpx;
}

.weight-input {
    width: 70rpx;
    text-align: center;
    margin: 0 10rpx;
}

.weight-btn {
    width: 50rpx;
    height: 50rpx;
    text-align: center;
    border-radius: 5px;
}

.reduce-weight {
    border: 1px solid #cccccc;
}

.add-weight {
    color: #ffffff;
    background: #f16623;
}

.volume-btn {
    font-size: 26rpx;
    width: 80rpx;
    height: 46rpx;
    text-align: center;
    line-height: 46rpx;
    border-radius: 5px;
    border: 1px solid #cccccc;
}

.volume-btn-s {
    color: #FFFFFF;
    background: #f16623;
    border: 0;
}

.volume-btn:nth-of-type(n+2) {
    margin-left: 50rpx;
}

.box-space {
    width: 100%;
    height: 180rpx;
}